<h1 style="text-align:center;">Here are all the students currently attending Hogwarts.</h1>
<% for student in @students %>
  <br>
  <h3 style="text-align:center;"> First Name: <%= student.first_name %> </h3>
  <h3 style="text-align:center;"> Last Name: <%= student.last_name %> </h3>
  <h3 style="text-align:center;"> Age: <%= student.age %> </h3>
  <h3 style="text-align:center;"> House: <%= student.house %> </h3>
  <h4 style="text-align:center;"> <a href="/students/<%= student.id %>">Show Student</a> </h4>
  <br>
  <hr>
<% end %>
